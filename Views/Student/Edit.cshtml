@using Students_Interest_System.Models
@model Items
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/css/bootstrap-datepicker.min.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-datepicker@1.9.0/dist/js/bootstrap-datepicker.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/site.css" rel="stylesheet" />
    <title>Edit Student</title>
</head>
<body>

    <style>

        .container {
            max-width: 800px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 20px;
            margin: 10% auto;
            margin-top:20px;
            border: 5px solid black;
            transform: translateX(-50%);
        }

        .box {
            border: 1px solid black;
            padding: 20px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            line-height: 1;
            margin-top: 10%;
            background-color: #E0E0E0;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input,
            .form-group select {
                width: 100%;
                padding: 10px;
                box-sizing: border-box;
                border: 1px solid #ced4da;
                border-radius: 5px;
                margin-top: 5px;
            }

        .header {
            background-color: #1b2e35;
            color: white;
            padding: 15px;
            display: flex;
        }

            .header a {
                margin: 20px;
                font-family: "Ink Free";
                color: white;
                font-weight: bold;
                font-size: 18px;
                text-decoration: None;
            }

            .header h2 {
                margin: 20px 10px 10px 50px;
                color: white;
                font-weight: bold;
                padding-right: 50%;
                font-family: "Ink Free";
                font-size: 24px;
            }

        .btn-group {
            justify-content: space-between;
            margin-top: 20px;
        }

        .btn {
            flex: 1;
            margin: 0 10px;
            width: 60%;
        }

        .custom-radio {
            margin-left: 100px;
        }

        body {
            background-color: rgba(255, 255, 255, 0.9);
            font-family: 'Arial', sans-serif;
        }

        h1 {
            margin-top: 25px;
            color: aliceblue;
            font-family: 'Times New Roman', Times, serif;
        }
    </style>

    <header class="header">
        <h2>EDGE MINDS</h2>

        <a href="@Url.Action("Dashboard", "Student")">Dashboard</a>

        <a href="@Url.Action("AllStudents", "Student")">All Students</a>

        <a href="@Url.Action("StudentForm", "Student")">Add Students</a>

        <a href="@Url.Action("Logout", "Student")">Logout</a>

    </header>
    <h1 class="text-center mb-4">Edit Student Details</h1>
    <section class="container">
        <form class="box" asp-action="Edit" method="post" style="margin:50px;">

            <div class="form-group">
                <label class="form-label" for="ID"> ID </label><br />
                <input class="form-control" asp-for="@Model.student.ID" readonly/><br />
            </div> 
            <div class="form-group">
                <label class="form-label" for="Name"> Full Name </label><br />
                <input class="form-control" asp-for="@Model.student.Name" /><br />
            </div >

            <div class="form-group">
                <label class="form-label" for="RollNo"> Roll Number </label><br />
                <input class="form-control" asp-for="@Model.student.RollNo" /><br />
            </div>

            <div class ="form-group">
                <label class="form-label" for="Email">Email Address</label><br />
                <input class="form-control" asp-for="@Model.student.Email" /><br />
            </div>
             
            <div class ="form-group">
                <label class="form-label" for="Gender">Gender</label><br />
                <select class="form-control" asp-for="@Model.student.Gender" style="padding-right: 60px; padding-top:5px; padding-bottom:5px;">
                    <option value="">Select an option</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select><br />
            </div>

            <div class="form-group">
                <br /><label class="form-label" for="City"> City </label><br />
                <select class="form-control" asp-for="@Model.student.City" style="padding-right: 60px; padding-top:5px; padding-bottom:5px;" required>
                    <option value="">Select an option</option>
                    @foreach (var city in Model.Cities)
                    {
                        <option value="@city">@city</option>
                    }
                </select><br />
            </div>

            <div class="form-group">
                <label class="form-label" for="DOB"> Date of Birth </label><br />
                <input class="form-control date-picker" asp-for="@Model.student.DOB" autocomplete="off" required /><br />
            </div>

            <div class="form-group">
                <label class="form-label" for="Interest"> Interest </label><br />
                <input class="form-control" list="List" asp-for="@Model.student.Interest" placeholder="Select your interest" required /><br />
                <datalist id="List">
                    @foreach (var interest in Model.Interests)
                    {
                        <option value="@interest">@interest</option>
                    }
                </datalist>
            </div>

            <div class="form-group">
                <label class="form-label" for="Department"> Department </label><br />
                <select class="form-control" asp-for="@Model.student.Department" style="padding-top:5px; padding-bottom:5px;" required>
                    <option value="">Select an option</option>
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department">@department</option>
                    }
                </select><br />
            </div>

            <div class="form-group">
                <label class="form-label" for="Degree"> Degree Title </label><br />
                <select class="form-control" asp-for="@Model.student.Degree" style="padding-right: 10px; padding-top:5px; padding-bottom:5px;" required>
                    <br />
                    <option value="">Select an option</option>
                    @foreach (var degree in Model.Degrees)
                    {
                        <option value="@degree">@degree</option>
                    }
                </select><br />
            </div>

            <div class="form-group">
                <label class="form-label" for="Subject"> Subject </label><br />
                <input class="form-control" asp-for="@Model.student.Subject" required /><br />
            </div>

            <div class="form-group">
                <label class="form-label" for="Start"> Start Date </label><br />
                <input class="form-control date-picker" asp-for="@Model.student.Start" autocomplete="off" required />
            </div>

            <div class="form-group">
                <label class="form-label" for="End"> End Date </label><br />
                <input class="form-control date-picker" asp-for="@Model.student.End" autocomplete="off" required />
            </div>

            <div class="btn-group">
                <input class="btn btn-dark" type="submit" value="Edit Student" />
                <button class="btn btn-dark" type="button" onclick="cancelButtonClick()">Cancel</button>
            </div>

        </form>
    </section>

    <script>

        function cancelButtonClick() {
            window.location.href = '/Student/AllStudents';
        }

        $(document).ready(function () {
            $('.date-picker').datepicker({
                format: 'dd/mm/yyyy',
                autoclose: true
            });
        });
    </script>
</body>
</html>

