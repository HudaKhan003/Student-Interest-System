@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Students_Interest_System.Models
@model User
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.7.0/dt-1.13.8/b-2.4.2/fc-4.3.0/sc-2.3.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/datatables.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js" />
    <link href="https://cdn.jsdelivr.net/npm/fortawesome/fontawesome-free@6.4.2/css/fontawesome.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />

    @if(TempData["alert"]!=null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.error('@TempData["alert"]');
            });
        </script>
    }

    @if(TempData["warning"]!=null)
    {
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                toastr.warning('@TempData["warning"]');
            });
        </script>
    }

    <title>SignUp</title>


    <style>

        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: #2c4345;
            color: white;
        }

        .horizontal-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            max-width: 1000px;
        }

        .container {
            width: 700px; 
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 10px;
            padding: 20px;
            border-width: 5px;
            border-color: black;
            transform: translateX(-50%);
        }


        .vertical-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .box {
            transform: translate(-50%, -15%);
            border: 1px solid black;
            padding: 10px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            line-height: 1;
            margin-top: 18%;
            margin-left: 50%;
            background-color:#E4E6D9;
        }

        .signup-form {
            display: flex;
            flex-direction: column;
        }

        .input-field {
            width: 300px;
            padding: 10px;
            margin: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
            text-align: center;
            font-family:'Times New Roman', Times, serif;
        }


        .already-account {
            
            color: #ffffff;
            margin-top: 5px;
            text-align: center;
            margin-bottom:10%;
        }
        .already-account a{

            text-decoration: none;
            color: #2c4345;
        }

        .signup-button {
            background-color: #3f5a5c;
            color: #ffffff;
            border: none;
            padding: 10px 20px;
            font-size: 1.2em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .signup-button:hover {
                background-color: #556f71; 
            }
        
        .role{

            color:#2c4345;
            margin-left: 20px;
        }
         .role input{
             margin-left:20px;
         }

    </style>
</head>

<body>

    <div class="horizontal-container">
        <div class="container">
            <h1>Signup Here</h1>
            <form class="signup-form box" action="/Student/signup" method="post">
                <input type="text" class="input-field" placeholder="Enter username" asp-for="Username" required />
                <input type="password" class="input-field" placeholder="Enter password" asp-for="Password" required />

                <div class="form-group role">
                    <label class="col-form-label form-label">Role:</label><br />
                    <input type="radio" id="userRole" name="role" value="User" checked>
                    <label for="userRole">User</label>
                    <input type="radio" id="adminRole" name="role" value="Admin">
                    <label for="adminRole">Admin</label>
                </div>

                <button type="submit" class="btn signup-button">Signup</button>
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p style="color: red;">@ViewBag.ErrorMessage</p>
                }
            </form>

            <div class="already-account">
                <a href="/Student/Login">Already have an account?</a>
            </div>
        </div>
    </div>

</body>

</html>
